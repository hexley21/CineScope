<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="cinema_name" type="String" />
        <variable name="cinema_year" type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_small"
        android:layout_marginTop="@dimen/distance_tiny"
        android:layout_marginEnd="@dimen/distance_small"
        android:layout_marginBottom="@dimen/distance_tiny"
        android:theme="@style/Widget.Material3.CardView.Elevated"
        app:cardBackgroundColor="?attr/colorSurface"
        app:contentPadding="@dimen/distance_small"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_cinema_list_poster"
                android:layout_width="@dimen/cinema_search_size"
                android:layout_height="@dimen/cinema_search_size"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img_cinema_list_poster"
                android:layout_alignBottom="@id/img_cinema_list_poster"
                android:layout_marginStart="@dimen/distance_small"
                android:layout_toEndOf="@id/img_cinema_list_poster"
                android:orientation="vertical"
                android:padding="@dimen/distance_small">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cinema_search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@{cinema_name}"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    app:fontFamily="@font/noto_sans_bold"
                    tools:text="Cinema: Name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cinema_search_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@{cinema_year}"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorPrimary"
                    app:fontFamily="@font/noto_sans_bold"
                    tools:text="2023" />
            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>