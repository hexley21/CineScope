<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <RelativeLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/cinema_result_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drag_handle">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/cinema_result_popularity"
                style="@style/ChoiceRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_popularity"
                app:drawableStartCompat="@drawable/flame" />
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/cinema_result_top"
                style="@style/ChoiceRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_top"
                app:drawableStartCompat="@drawable/trophy" />
        </RadioGroup>
    </RelativeLayout>
</layout>